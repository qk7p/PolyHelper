<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateMailFragment">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:rowCount="5">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/teal_200"
            android:gravity="center_horizontal"
            android:text="@string/type_of_print"
            android:textSize="18dp"
            app:layout_columnSpan="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/offsetPress"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/offset_press"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/digitalPress"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/digital_press"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#FF03DAC5"
            app:layout_columnSpan="2"
            app:layout_row="2" />

        <FrameLayout
            android:id="@+id/sendMessageFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_columnSpan="2"
            app:layout_row="3" />


    </androidx.gridlayout.widget.GridLayout>

</FrameLayout>